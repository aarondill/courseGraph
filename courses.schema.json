{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "The metadata for the exercise",
  "type": "object",
  "required": ["courses", "taken", "degree"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "The JSON schema being used"
    },
    "degree": {
      "type": "string",
      "description": "The degree being studied"
    },
    "Fast Track": {
      "type": "object",
      "description": "Courses taking for fast track program",
      "patternProperties": {
        "^//.*": {
          "anyOf": [
            { "type": "null" },
            { "type": "object" },
            { "type": "string" }
          ]
        }
      },
      "additionalProperties": {
        "type": "object",
        "description": "Course metadata",
        "required": ["name", "replaces"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "replaces": {
            "description": "Course that this replaces",
            "anyOf": [{ "type": "string" }, { "type": "null" }]
          },
          "reqs": {
            "type": "array",
            "description": "Course requirements",
            "items": { "type": "string" }
          }
        }
      }
    },
    "courses": {
      "type": "object",
      "description": "Courses required for the degree",
      "patternProperties": {
        "^//.*": {
          "anyOf": [
            { "type": "null" },
            { "type": "object" },
            { "type": "string" }
          ]
        }
      },
      "additionalProperties": {
        "type": "object",
        "description": "Course metadata",
        "required": ["name"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "reqs": {
            "type": "array",
            "description": "Course requirements",
            "items": { "type": "string" }
          }
        }
      }
    },
    "taken": {
      "type": "object",
      "description": "Courses already taken in each semester",
      "additionalProperties": {
        "type": "array",
        "description": "Courses taken in semester",
        "items": { "type": "string" }
      }
    }
  }
}
